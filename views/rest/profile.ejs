    <div class="content container">
        <div style="padding-top: 60px;">
            <h1 class="page-header">Edit Profile</h1>
            <div class="row">
                <!-- left column -->
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="text-center">
                        <img src="http://lorempixel.com/200/200/people/9/" class="avatar img-circle img-thumbnail" alt="avatar">
                        <h6>Upload a different photo...</h6>

                        <form id="uploadForm" enctype="multipart/form-data" method="post" action="uploadavatar">
                            <input class="text-center center-block well well-sm" type="file" name="filetoupload" />
                            <input  type="submit" value="Upload File" name="submit">
                        </form>
                        <!-- <input type="file" class="text-center center-block well well-sm"> -->
                    </div>
                </div>
                <!-- edit form column -->
                <div class="col-md-8 col-sm-6 col-xs-12 personal-info">

                    <h3>Personal info</h3>
                    <h6 id="_id" ng-model="_id" class="hidden"><%=user._id%></h6>

                    <form class="form-horizontal" method="put" ng-app="restapp" ng-controller="validateCtrl" name="restForm" novalidate>
                        <div class="alert alert-info" ng-show="message"> {{ message }}</div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Name:</label>
                            <div class="col-lg-8">
                                <input id="name" name="name" class="form-control" type="text" required ng-model="restdata.name">
                                <span style="color:red" ng-show="restForm.name.$dirty && restForm.name.$invalid"></span>
                                <span style="color:red" ng-show="restForm.name.$error.required">Name is required</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Email:</label>
                            <div class="col-lg-8">
                                <input id="email" name="email" class="form-control" type="text" required ng-model="restdata.email">
                                <span style="color:red" ng-show="restForm.email.$dirty && restForm.email.$invalid"></span>
                                <span style="color:red" ng-show="restForm.email.$error.required">Email is required.</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Phone:</label>
                            <div class="col-lg-8">
                                <input id="phone" name="phone" class="form-control" type="number" required ng-model="restdata.phone">
                                <span style="color:red" ng-show="restForm.phone.$dirty && restForm.phone.$invalid"></span>
                                <span style="color:red" ng-show="restForm.phone.$error.required">Phone is required.</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Password:</label>
                            <div class="col-md-8">
                                <input name="password" ng-model="restdata.password" class="form-control" type="password" ng-model="formData.password" ng-minlength="1"
                                    ng-maxlength="20" ng-pattern="/(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z])/" required>
                                <span style="color: red" ng-show="restForm.password.$error.required && restForm.password.$dirty">required</span>
                                <span style="color: red" ng-show="!restForm.password.$error.required && (restForm.password.$error.minlength || restForm.password.$error.maxlength) && restForm.password.$dirty">Passwords must be between 1 and 20 characters.</span>
                                <span style="color: red" ng-show="!restForm.password.$error.required && !restForm.password.$error.minlength && !restForm.password.$error.maxlength && restForm.password.$error.pattern && restForm.password.$dirty">Must contain one lower &amp; uppercase letter, and one non-alpha character (a number or a symbol.)</span>

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Confirm password:</label>
                            <div class="col-md-8">
                                <input id="password_c" type="password" name="password_c" ng-model="formData.password_c" valid-password-c required novalidate>
                                <span style="color: red" ng-show="restForm.password_c.$error.required && restForm.password_c.$dirty">Please confirm your password.</span>
                                <span style="color: red" ng-show="!restForm.password_c.$error.required && restForm.password_c.$error.noMatch && restForm.password.$dirty">Passwords do not match.</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-8">
                                <button class="btn btn-primary" value="Save Changes" type="submit" ng-disabled="restForm.$invalid" ng-click="updateRest(restdata)">Save Changes</button>
                                <span></span>
                                <input class="btn btn-default" value="Cancel" type="reset">
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

